            <TextView
                android:id="@+id/tvUser_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:padding="5dp"
                android:text="@string/user_info"
                android:textColor="@color/black"
                android:textSize="20sp"


                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/gray"
                android:text="@string/hot" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >


<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/gray_200">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:orientation="horizontal"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/ivBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    android:contentDescription="@string/todo"
                    app:srcCompat="@drawable/ic_back" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:padding="5dp"
                    android:text="@string/g_i_c_c_digilife"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:fontFamily="@font/roboto"
                    android:textColor="@color/black"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/background_corner"
                android:orientation="vertical"
                android:padding="20dp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="@string/g_i_c_c"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/th_i_h_n"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="12sp"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/tv4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="@string/c_b_n"
                        android:textStyle="bold"
                        android:textColor="@color/blue"
                        android:textSize="16sp"
                        android:fontFamily="@font/roboto"
                        android:layout_marginEnd="25dp"/>

                    <TextView
                        android:id="@+id/tvBasic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/_20_12_2020"
                        android:textSize="14sp"
                        android:fontFamily="@font/roboto"/>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/data"
                        android:textStyle="bold"
                        android:textColor="@color/blue"
                        android:textSize="16sp"
                        android:fontFamily="@font/roboto" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_marginEnd="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/_200mb_1gb"
                            android:textSize="10sp"
                            android:gravity="center"/>

                        <ProgressBar
                            android:id="@+id/progressBar"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:secondaryProgress="20"
                            android:secondaryProgressTint="@color/blue" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvOTT"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/_20_12_2020"
                        android:textSize="14sp"
                        android:fontFamily="@font/roboto" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/ott"
                        android:textStyle="bold"
                        android:textColor="@color/blue"
                        android:textSize="16sp"
                        android:fontFamily="@font/roboto"
                        android:layout_marginEnd="5dp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_marginEnd="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/_200_1000_phut"
                            android:textSize="10sp"
                            android:gravity="center"/>

                        <ProgressBar
                            android:id="@+id/progressBar2"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:secondaryProgress="20"
                            android:secondaryProgressTint="@color/blue" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvData"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/_20_12_2020"
                        android:textSize="14sp"
                        android:fontFamily="@font/roboto" />
                </TableRow>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/background_corner"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/g_i_membership"
                    android:textColor="@color/blue"
                    android:textSize="16sp"
                    android:fontFamily="@font/roboto"
                    android:textStyle="bold"/>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btAdvance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/advance"
                        android:layout_weight="1"
                        android:layout_margin="10dp"
                        android:textColor="@color/white"
                        android:background="@drawable/background_button"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btVip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/vip"
                        android:layout_weight="1"
                        android:layout_margin="10dp"
                        android:textColor="@color/white"
                        android:background="@drawable/background_button"/>
                </TableRow>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/background_corner"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/tv2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/packet_advance"
                    android:textColor="@color/blue"
                    android:textSize="16sp"
                    android:fontFamily="@font/roboto"
                    android:textStyle="bold"/>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/bt2k"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/p1"
                        android:textAllCaps="false"
                        android:layout_weight="1"
                        android:layout_margin="10dp"
                        android:textColor="@color/white"
                        android:background="@drawable/background_button"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/bt55k"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/p2"
                        android:textAllCaps="false"
                        android:layout_weight="1"
                        android:layout_margin="10dp"
                        android:textColor="@color/white"
                        android:background="@drawable/background_button"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/bt549k"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/p3"
                        android:textAllCaps="false"
                        android:layout_weight="1"
                        android:layout_margin="10dp"
                        android:textColor="@color/white"
                        android:background="@drawable/background_button"/>
                </TableRow>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/background_corner"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/tv3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/option"
                    android:textColor="@color/blue"
                    android:textSize="16sp"
                    android:fontFamily="@font/roboto"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tv31"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ott"
                    android:textColor="#ED0677"
                    android:textSize="16sp"
                    android:layout_marginTop="20dp"
                    android:textStyle="bold"/>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/bto2k"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/p1"
                        android:textAllCaps="false"
                        android:layout_weight="1"
                        android:layout_margin="10dp"
                        android:textColor="@color/white"
                        android:background="@drawable/background_button"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/bto55k"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/p2"
                        android:textAllCaps="false"
                        android:layout_weight="1"
                        android:layout_margin="10dp"
                        android:textColor="@color/white"
                        android:background="@drawable/background_button"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/bto549k"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/p3"
                        android:textAllCaps="false"
                        android:layout_weight="1"
                        android:layout_margin="10dp"
                        android:textColor="@color/white"
                        android:background="@drawable/background_button"/>
                </TableRow>

                <TextView
                    android:id="@+id/tv32"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/data"
                    android:textColor="#ED0677"
                    android:textSize="16sp"
                    android:layout_marginTop="20dp"
                    android:textStyle="bold"/>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btd1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/d1"
                        android:textAllCaps="false"
                        android:layout_weight="1"
                        android:layout_margin="10dp"
                        android:textColor="@color/white"
                        android:background="@drawable/background_button"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btod2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/d2"
                        android:textAllCaps="false"
                        android:layout_weight="1"
                        android:layout_margin="10dp"
                        android:textColor="@color/white"
                        android:background="@drawable/background_button"/>

                </TableRow>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/layoutCmt"
    android:layout_margin="10dp">


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <ImageView
            android:id="@+id/ivCmtAccount"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_margin="3dp"
            android:clickable="true"
            app:srcCompat="@drawable/ic_account" />

        <TextView
            android:id="@+id/tvCmtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:clickable="true"
            android:fontFamily="@font/roboto"
            android:text="@string/name"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvCmtTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/eg_time" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/tvEmpty1"
            android:layout_width="40dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvCmtContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/eg_title"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="10dp"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto"/>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/tvEmpty2"
            android:layout_width="40dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvAnswer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="50dp"
            android:clickable="true"
            android:fontFamily="@font/roboto"
            android:text="@string/answer"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvCmtLike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:drawablePadding="5dp"
            android:text="@string/_200"
            app:drawableEndCompat="@drawable/ic_like" />
    </TableRow>


</LinearLayout>
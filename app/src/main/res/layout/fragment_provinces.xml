<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="#F6F7FE"
    tools:context=".categories.ProvincesFragment"
    android:id="@+id/fmProvinces">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:contentDescription="@string/todo"
        android:src="@drawable/img_news"/>
    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="@string/no_local"
        android:textColor="#E0E3EB"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btChooseProvince"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@drawable/background_button"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:textSize="25sp"
        android:text="@string/add_local" />

</LinearLayout>
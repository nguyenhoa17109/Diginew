<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@color/gray_200"
    tools:context=".NewsActivity">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="20dp"
                android:background="@drawable/background_corner">

                <TextView
                    android:id="@+id/tvTitleNews"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/eg_title"
                    android:textColor="@color/black"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/roboto"/>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:id="@+id/tvNewsSource"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/eg_source" />

                    <TextView
                        android:id="@+id/tvNewsTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:text="@string/eg_time" />
                </TableRow>

                <TextView
                    android:id="@+id/tvContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:text="@string/eg_content"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:fontFamily="@font/roboto"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_margin="10dp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <TextView
                        android:id="@+id/tvSearch1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/covid_19"
                        android:textSize="18sp"
                        android:background="@drawable/background_corner"
                        android:padding="7dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_margin="5dp"/>

                    <TextView
                        android:id="@+id/tvSearch2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/viet_nam_covid"
                        android:textSize="18sp"
                        android:background="@drawable/background_corner"
                        android:padding="7dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_margin="5dp"/>

                    <TextView
                        android:id="@+id/tvSearch3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/virut"
                        android:textSize="18sp"
                        android:background="@drawable/background_corner"
                        android:padding="7dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_margin="5dp"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <TextView
                        android:id="@+id/tvSearch21"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/prime"
                        android:textSize="18sp"
                        android:background="@drawable/background_corner"
                        android:padding="7dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_margin="5dp"/>

                    <TextView
                        android:id="@+id/tvSearch22"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/breakdown"
                        android:textSize="18sp"
                        android:background="@drawable/background_corner"
                        android:padding="7dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_margin="5dp"/>

                    <TextView
                        android:id="@+id/tvSearch23"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/anthony_fauci"
                        android:textSize="18sp"
                        android:background="@drawable/background_corner"
                        android:padding="7dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_margin="5dp"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <TextView
                        android:id="@+id/tvSearch31"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/wisconsin"
                        android:textSize="18sp"
                        android:background="@drawable/background_corner"
                        android:padding="7dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_margin="5dp"/>

                    <TextView
                        android:id="@+id/tvSearch32"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/washington"
                        android:textSize="18sp"
                        android:background="@drawable/background_corner"
                        android:padding="7dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_margin="5dp"/>

                    <TextView
                        android:id="@+id/tvSearch33"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/coronavirus"
                        android:textSize="18sp"
                        android:background="@drawable/background_corner"
                        android:padding="7dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_margin="5dp"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <TextView
                        android:id="@+id/tvSearch41"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/nepal"
                        android:textSize="18sp"
                        android:background="@drawable/background_corner"
                        android:padding="7dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_margin="5dp"/>

                    <TextView
                        android:id="@+id/tvSearch42"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/animal"
                        android:textSize="18sp"
                        android:background="@drawable/background_corner"
                        android:padding="7dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_margin="5dp"/>

                    <TextView
                        android:id="@+id/tvSearch43"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/entertainment"
                        android:textSize="18sp"
                        android:background="@drawable/background_corner"
                        android:padding="7dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_margin="5dp"/>
                </TableRow>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:background="@drawable/background_corner"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/xu_t_cho_b_n"
                    android:textSize="24sp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcNews"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/background_corner_top"
                    android:padding="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="60dp"
                    tools:listitem="@layout/item_news"/>
            </LinearLayout>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/scroll1"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivAccount"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginEnd="10dp"
            android:contentDescription="@string/todo"
            app:srcCompat="@drawable/ic_account" />

        <EditText
            android:id="@+id/etCmt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="@string/cmt"
            android:inputType="text"
            android:background="@null"
            android:importantForAutofill="no" />

        <TextView
            android:id="@+id/tvLike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:text="@string/_200"
            app:drawableEndCompat="@drawable/ic_like" />

        <TextView
            android:id="@+id/tvCmt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:text="@string/_200"
            app:drawableEndCompat="@drawable/ic_cmts" />

        <ImageView
            android:id="@+id/ivShare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="@string/todo"
            app:srcCompat="@drawable/ic_share" />
    </LinearLayout>

</RelativeLayout>
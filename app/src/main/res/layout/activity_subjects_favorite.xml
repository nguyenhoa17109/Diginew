<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".splash.SubjectsFavorite"
    android:layout_margin="16dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivDigi"
        android:layout_marginTop="7dp"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:src="@drawable/img_logo_color"
        android:contentDescription="@string/todo"/>

    <TextView
        android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivDigi"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="@string/fav"
        android:textSize="20sp"
        android:fontFamily="@font/roboto"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvSubjectsFV"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tv"
        android:layout_marginTop="10dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btToHome"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_alignBottom="@+id/rvSubjectsFV"
        android:text="@string/continued"
        android:textSize="14dp"
        android:background="@drawable/background_button"
        android:textColor="@color/white"
        android:outlineAmbientShadowColor="@color/white"
        android:shadowColor="@color/white"
        android:outlineSpotShadowColor="@color/white"/>
</RelativeLayout>